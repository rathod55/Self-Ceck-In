<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/login" tools:context=".MainActivity" android:background="@drawable/city_image" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/logo" android:layout_height="200dp" android:layout_width="200dp"  android:layout_centerHorizontal="true" android:layout_marginTop="70dp" android:scaleType="fitXY"/>
    <EditText android:id="@+id/editText1" android:background="@drawable/edit_text_bg" android:layout_height="41dp" android:layout_width="274dp" android:layout_centerHorizontal="true" android:layout_marginTop="50dp" android:inputType="textEmailAddress" android:hint="Enter the Email" android:drawableLeft="@drawable/user" android:ems="10" android:layout_below="@+id/logo"/>
    <EditText android:id="@+id/editText2" android:background="@drawable/edit_text_bg" android:layout_height="46dp" android:layout_width="274dp" android:layout_centerHorizontal="true" android:layout_marginTop="50dp" android:inputType="textPassword" android:hint="Enter the Password" android:drawableLeft="@drawable/password_png" android:ems="10" android:layout_below="@+id/editText1"/>
    <Button android:id="@+id/imageButton1" android:background="@drawable/login_page_button_design" android:layout_height="wrap_content" android:layout_width="200dp" android:layout_centerHorizontal="true" android:layout_marginTop="30dp" android:layout_below="@+id/editText2" android:text="Submit"/>
    <TextView android:id="@+id/forgot_password_TV" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_marginTop="10dp" android:layout_below="@+id/imageButton1" android:text="forgot password?" android:textColor="#FFF"/>
    <Button android:id="@+id/register_button1" android:background="#70FF0000" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Not a User? Register Here" android:textColor="#FFF" android:layout_alignParentBottom="true"/>
</RelativeLayout>