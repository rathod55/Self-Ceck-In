<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/booked_history_layout_cardview_design"
        >

        <TextView
            android:id="@+id/id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:layout_marginStart="5dp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_marginStart="2dp"
            android:textStyle="italic|bold"
            android:layout_toRightOf="@+id/id_txt"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/Hotel_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/id_txt"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/CustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/Hotel_Name"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/Date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:layout_marginStart="5dp"
            android:layout_below="@id/CustomerName"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/Date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_below="@id/CustomerName"
            android:layout_toRightOf="@id/Date_txt"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/Time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:layout_marginStart="5dp"
            android:layout_below="@id/Date_txt"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/Time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_below="@id/Date_txt"
            android:layout_toRightOf="@id/Time_txt"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/Days_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days:"
            android:layout_marginStart="5dp"
            android:layout_below="@id/Time_txt"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/Days_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days"
            android:layout_below="@id/Time_txt"
            android:layout_toRightOf="@id/Days_txt"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/Price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Paid:"
            android:layout_marginStart="5dp"
            android:layout_below="@id/Days_txt"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/Price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_below="@id/Days_txt"
            android:layout_toRightOf="@id/Price_txt"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/Status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:layout_marginStart="5dp"
            android:layout_below="@id/Price_txt"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/Status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Price_txt"
            android:layout_toRightOf="@id/Status_txt"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Status"
            android:textColor="#FFF"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/sample_room_image"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>